{% extends 'base.html.twig' %}

{% block content %}


    <div class="search-info">
        <label>Search Results for : </label>
        {% for result in searchResults %}
            <p>{{ result }}</p>
        {% endfor %}
        <p></p>
    </div>
    <div class="row search-content">

        {% for movie in movies %}
            <div><a href="{{ path('movie_detail',{'id' : movie.id})}}"><img src="{{ asset('img/posters/')}}{{ movie.image }}"></a></div>
        {% endfor %}

    </div>
{% endblock %}

